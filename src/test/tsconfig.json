{
    "compilerOptions": {
        "importHelpers": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "types": [
            "bun"
        ],
        "skipLibCheck": true,
        "strict": false
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "scratchpad/**/*"
    ]
}