{
    "compilerOptions": {
        "sourceMap": true,
        "downlevelIteration": false,
        "importHelpers": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "types": [
            "bun"
        ],
        "skipLibCheck": true,
        "strict": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test/**/*.ts",
        "dist/**/*.ts",
        "node_modules"
    ]
}